<div class='container'>
  {{#if notes}}
    <div class='row'>
      {{#each notes}}
        <div class='col-md-4 mb-4'>
          <div class='card' style='width: 100%;'>
            <div class='card-header text-right'>
              <a href='/notes/edit/{{_id}}'>
                <i class='fa fa-pencil' aria-hidden='true'></i>
              </a>
            </div>
            <div class='card-body'>
              <h5 class='card-title'><strong>{{title}}</strong></h5>
              <div class='container'>
                <div
                  class='w-100 h-200 border overflow-auto'
                  style='max-height: 150px; min-height: 150px;'
                >
                  <p>{{description}}</p>
                </div>
              </div>
              <form action='/notes/delete/{{_id}}?_method=delete' method='post'>
                <input type='hidden' name='_method' value='delete' />
                <button
                  type='submit'
                  class='btn btn-danger btn-block btn-sm'
                >Delete</button>
              </form>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class='col-md-3 mx-auto'>
      <a href='/notes/add' class='btn btn-secondary btn-lg'>
        <img
          src='/img/add.png'
          alt='img'
          class='rounded-circle mx-auto d-block m-4 logo'
        />
        <p>Add Your First Note</p>
      </a>
    </div>
  {{/if}}
</div>